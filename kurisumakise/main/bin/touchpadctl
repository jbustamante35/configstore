#!/bin/sh
# Toggle settings for touchpad

pad=$(xinput --list | egrep -i SYNA2393 | cut -f2 | egrep -i id= | cut -f2 -d=)
cmd=$1

case $cmd in
tap)
    # Control tap-to-click
    toggle=1
    tapstring="libinput Tapping Enabled"

    currVal=$(xinput -list-props "$pad" | grep "$tapstring" | \
        head -1 | awk '{print $NF}')

    if [ "$currVal" -eq 1 ]; then
        toggle=0
    fi

    xinput -set-prop "$pad" "$tapstring" "$toggle"
    ;;

dev)
    # Toggle touchpad
    toggle=1
    devstring="Device Enabled"
    currVal=$(xinput -list-props "$pad" | \
    grep "$devstring" | awk '{print $NF}')

    if [ "$currVal" -eq 1 ]; then
        toggle=0
    fi

    xinput -set-prop "$pad" "$devstring" $toggle
    ;;

*)
    # Do nothing
    echo "Unable to toggle touchpad on device $pad"
    echo "Must specify arguments [tap | dev]"
    ;;
esac

