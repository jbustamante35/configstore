#!/bin/sh

## Startup script for Awesome WM

# Kill running daemons
killall dunst conky compton nm-applet blueman-applet optimus-manager-qt && \
    mpd --kill ;

# Set displays
setScreens 2 nvidia home;

# Set Xresources and wallpaper
feh --bg-scale $HOME/.config/wall.png
regencolors $WALEND 1

# Applets [bluetooth , wifi , power , volume , optimus-manager , pamac]
nm-applet &
volumeicon &
blueman-applet &
optimus-manager-qt &
pamac-tray &
xfce4-power-manager &

# Dropbox autostart
#dropbox-cli autostart
dropbox start

# Touchpad and mouse
touchpadctl tap
unclutter -idle 2 &

# MPD | Compton | Conky | Dunst
mpd &
myconky 0 &
dunst   -config ~/.config/dunst/dunstrc &
compton --config ~/.config/compton/compton.conf -b &

# URxvt daemon
urxvtd -q -o -f &

# Open SSH Port Locally
#ufw allow from 192.168.1.1/24 &
