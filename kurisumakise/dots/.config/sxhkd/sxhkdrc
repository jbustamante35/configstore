####################### SXHD Shortcuts and Keybindings ########################


###############################################################################
############################## Hardware Control ###############################
###############################################################################

########################### Window Manager Control ############################
# sxhkdrc [reload | quit/restart | close/kill]
super + c
    pkill -USR1 -x sxhkd

super + alt + {z,c}
    bspc {quit,wm -r}

super + {_,shift + }q
    bspc node -{c,k}

# power control [suspend | shutdown prompt]
super + shift + p
    systemctl suspend && lockScreen

alt + Delete
    ~/.config/polybar/scripts/i3shutdown

############################### Volume Control ################################
XF86AudioMute
    pulseaudio-ctl mute

XF86AudioRaiseVolume
    pulseaudio-ctl up 05

shift + XF86AudioRaiseVolume
    pulseaudio-ctl up 10

ctrl + XF86AudioRaiseVolume
    pulseaudio-ctl up 01

XF86AudioLowerVolume
    pulseaudio-ctl down 05

shift + XF86AudioLowerVolume
    pulseaudio-ctl down 10

ctrl + XF86AudioLowerVolume
    pulseaudio-ctl down 01

############################# Brightness Control ##############################
XF86MonBrightnessDown
    xbacklight -dec 5

shift + XF86MonBrightnessDown
    xbacklight -dec 10

XF86MonBrightnessUp
    xbacklight -inc 5

shift + XF86MonBrightnessUp
    xbacklight -inc 10

############################### Display Control ###############################
# Display control [xrandr]
alt + w
    setScreens 1

alt + shift + w
    setScreens 2

