#!/bin/sh
# Set single or dual display

num="$1"
layouts="$HOME"/.screenlayout

case $num in
    1)
        "$layouts"/singleScreen.sh
        ;;

    2)
        "$layouts"/dualScreen.sh
        ;;

    2b)
        "$layouts"/dualScreen2.sh
        ;;

    3)
        "$layouts"/tripleScreen.sh
        ;;

    *)
        "$layouts"/singleScreen.sh
        ;;
esac

