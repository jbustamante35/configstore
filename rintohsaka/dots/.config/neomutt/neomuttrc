# vim: filetype=neomuttrc
# Config file for NeoMutt
set editor = 'vim'

# From Luke Smith tutorial
set realname         = "Julian Bustamante"
set from             = "jbustamante35@gmail.com"
set imap_user        = "jbustamante35@gmail.com"
set smtp_url         = "smtp://jbustamante35@smtp.gmail.com:587/"
set sendmail         = "/usr/bin/msmtp -a gmail"
set folder           = "~/Mail/"
set spoolfile        = "+Gmail"
set record           = /dev/null
set postponed        = "+[Gmail].Drafts"
set header_cache     = ~/.config/neomutt/gmail/cache/headers
set message_cachedir = ~/.config/neomutt/gmail/cache/bodies
set certificate_file = ~/.config/neomutt/gmail/certificates

#source "~/.config/neomutt/credentials/getmuttpass Gmail |"
set mbox_type     = Maildir
set mbox          = "+[Gmail].All Mail"
set ssl_starttls  = yes
set ssl_force_tls = yes

#mailboxes +INBOX
mailboxes +Gmail

bind index g noop
macro index gi "<change-folder>=Gmail<enter>" "Go to inbox"
macro index ga "<change-folder>=[Gmail].All Mail<enter>" "Go to all mail"
macro index gs "<change-folder>=[Gmail].Sent Mail<enter>" "Go to sent mail"
macro index gS "<change-folder>=[Gmail].Spam<enter>" "Go to spam"
macro index gt "<change-folder>=[Gmail].Trash<enter>" "Go to trash"
macro index gd "<change-folder>=[Gmail].Drafts<enter>" "Go to drafts"
macro index gl "<change-folder>=lingcircle<enter>" "Go to lingcircle"
macro index gr "<change-folder>=ugaroml<enter>" "Go to ugaroml"

# my preferences
set sidebar_visible
set sidebar_format = "%B%?F? [%F]?%* %?N?%N/?%S"
set mail_check_stats


