#!/bin/sh
# Set-up for VNC local forwarding

dsp="$1"
svr="$2"

case $svr in
    sub)
        ip=128.104.98.118
        port=22
        ;;

    dev)
        ip=128.104.98.13
        port=22
        ;;

    kurisu)
        ip=192.168.1.23
        port=3355
        ;;

    potato)
        ip=192.168.1.16
        port=5335
        ;;

    *)
        # Default to JDev
        ip=128.104.98.13
        port=22
        ;;
esac

# Setup VNC display with local forwarding set to background
ssh -L "$dsp":localhost:"$dsp" -N -f -l jbustamante "$ip" -p "$port"

