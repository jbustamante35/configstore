#!/bin/sh
# Set-up for VNC local forwarding

dsp="$1"
svr="$2"

case $svr in
    me)
        user=jbustamante
        ip=127.0.0.1
        port=5335
        ;;

    sub)
        # Spalding Submit Machine
        user=jbustamante
        #ip=128.104.98.118
        ip="sub"
        port=22
        ;;

    jdev)
        # JDev remote server
        user=jbustamante
        #ip=128.104.98.13
        ip="jdev"
        port=22
        ;;

    potato)
        user=jbustamante
        #ip=192.168.1.13
        ip="potato"
        port=5335
        ;;

    winry)
        user=jbustamante
        #ip=192.168.1.29
        ip="winry"
        port=3553
        ;;

    kurisu)
        # JDev remote server
        user=jbustamante
        #ip=192.168.1.23
        ip="kurisu"
        port=3355
        ;;

    office)
        # Spalding Lab Office
        user=kinematics
        #ip=128.104.98.158
        ip="office"
        port=133
        ;;

    molinejo)
        # Spalding Lab Office
        user=jbustamante
        #ip=128.104.98.182
        ip="molinejo"
        port=133
        ;;

    *)
        # Default to JDev
        user=
        ip=
        port=
        ;;
esac

# Start the server in the background
ssh -L "$dsp":localhost:"$dsp" -N -f -l "$user" "$ip" -p "$port"
