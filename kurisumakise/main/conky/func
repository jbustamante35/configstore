${voffset 1} ${color2} ${font} Discord            $alignr ${color} F8
${voffset 1} ${color2} ${font} Krita              $alignr ${color} F9
${voffset 1} ${color2} ${font} Inkscape           $alignr ${color} F10
${voffset 1} ${color2} ${font} Gimp               $alignr ${color} F11
