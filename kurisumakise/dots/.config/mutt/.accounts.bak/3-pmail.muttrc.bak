# vim: filetype=neomuttrc
# muttrc file for account pmail
alias me Julian Bustamante <jbustamante11@protonmail.com>
set realname         = "Julian Bustamante"
set from             = "jbustamante11@protonmail.com"
set sendmail         = "msmtp -a pmail"
set folder           = "/home/jbustamante/.local/share/mail/pmail"
set header_cache     = /home/jbustamante/.cache/mutt-wizard/pmail/headers
set message_cachedir = /home/jbustamante/.cache/mutt-wizard/pmail/bodies
set mbox_type        = Maildir

bind index,pager gg noop
bind index,pager g noop
bind index,pager M noop
bind index,pager C noop
bind index gg first-entry
macro index o "<shell-escape>mailsync -V pmail<enter>" "run mbsync to sync pmail"
unmailboxes *

set spoolfile = "+INBOX"
set record = "+Sent"
set postponed = ""
set trash = "+Trash"


#mailboxes "=Archive" "=INBOX" "=All\ Mail" "=Sent" "=Spam" "=Trash"

mailboxes =proton/"Archive" =proton/"INBOX" =proton/"All\ Mail" =proton/"Sent" =proton/"Spam" =proton/"Trash"

mailboxes =wisc/"INBOX" =wisc/"Archive" =wisc/"Sent Items" =wisc/"Drafts" =wisc/"Trash"

mailboxes =gmail/"INBOX" =gmail/"[Gmail].All Mail" =gmail/"[Gmail].Important" =gmail/"[Gmail].Sent\ Mail" =gmail/"[Gmail].Drafts" =gmail/"[Gmail].Spam" =gmail/"[Gmail].Trash"

# Proton Mail
macro index,pager pi "<change-folder>=INBOX<enter>" "go to inbox" # mw-autogenerated
macro index,pager pa "<change-folder>=Archive<enter>" "go to archive" # mw-autogenerated
macro index,pager ps "<change-folder>=Sent<enter>" "go to sent" # mw-autogenerated
macro index,pager pS "<change-folder>=Spam<enter>" "go to spam" # mw-autogenerated
macro index,pager pt "<change-folder>=Trash<enter>" "go to trash" # mw-autogenerated

macro index,pager Ma "<save-message>=Archive<enter>" "move mail to archive" # mw-autogenerated
macro index,pager Mi "<save-message>=INBOX<enter>" "move mail to inbox" # mw-autogenerated
macro index,pager Mt "<save-message>=Trash<enter>" "move mail to trash" # mw-autogenerated
macro index,pager MS "<save-message>=Spam<enter>" "move mail to spam" # mw-autogenerated

