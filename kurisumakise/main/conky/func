${font} ${voffset 1} ${hr 2} $color
${voffset 1} ${color2} ${font} Nvidia Settings    $alignr ${color} F1
${voffset 1} ${color2} ${font} Google Music       $alignr ${color} F2
${voffset 1} ${color2} ${font} Spotify            $alignr ${color} F3
${voffset 1} ${color2} ${font} Android Messages   $alignr ${color} F4
