#!/bin/sh

## Startup script for Bspwm

# Kill running daemons
killall dunst & killall conky & killall picom & killall polybar & mpd --kill ;

# Set displays
#setScreens 2b;
setScreens 1;

# Set Xresources and wallpaper
regencolors "$WALEND" 1

# Applets [bluetooth , wifi]

# Dropbox autostart
#dropbox-cli autostart
dropbox-cli start

# Touchpad tap
touchpadctl tap

# MPD | Picom | Conky | Dunst
# Picom was formerly Compton
mpd &
myconky &
dunst -config ~/.config/dunst/dunstrc &
picom --config ~/.config/compton/picom.conf -b  ;

# Misc tasks
unclutter --timeout 10 --ignore-scrolling --jitter 5 --fork &
urxvtd -q -o -f &
protonmail-bridge --noninteractive &
