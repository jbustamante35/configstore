!! Global Settings
*antialias:  true
*autohint:   true

!! Aestetics
URxvt*loginShell:      true
URxvt*termName:        rxvt-256color
URxvt*intensityStyles: false
URxvt*scrollBar:       false
URxvt*cursorColor:     cyan
URxvt*cursorBlink:     true
URxvt*cursorUnderline: true
URxvt*scrollstyle:     plain
URxvt*iso14755:        false
URxvt*iso14755_52:     false
URxvt*internalBorder:  5

! Transparency
URxvt*depth:        32
URxvt*background:   [90]#000000
URxvt*transparent:  true
URxvt*.shading:     25

!!Fonts
#define font1 DejaVu Sans Mono
#define font2 Liberation Mono
#define font3 Nimbus Sans
#define font4 Mono

URxvt*font:            xft:font1:pixelsize=12:minspace=false, \
                       xft:font2:pixelsize=12:minspace=false, \
                       xft:font3:pixelsize=12:minspace=false, \
                       xft:font4:pixelsize=12:minspace=false
URxvt*boldfont:        xft:font1:pixelsize=12:minspace=false, \
                       xft:font2:pixelsize=12:minspace=false, \
                       xft:font3:pixelsize=12:minspace=false, \
                       xft:font4:pixelsize=12:minspace=false
URxvt*italicfont:      xft:font1:pixelsize=12:minspace=false, \
                       xft:font2:pixelsize=12:minspace=false, \
                       xft:font3:pixelsize=12:minspace=false, \
                       xft:font4:pixelsize=12:minspace=false
URxvt*bolditalicfont:  xft:font1:pixelsize=12:minspace=false, \
                       xft:font2:pixelsize=12:minspace=false, \
                       xft:font3:pixelsize=12:minspace=false, \
                       xft:font4:pixelsize=12:minspace=false

URxvt*letterSpace:     false

!!!! Misc
!! Extensions
URxvt*perl-lib:	            ~/.urxvt/ext
URxvt*perl-ext-common:	    default,matcher,resize-font,url-select,keyboard-select,clipboard
URxvt*colorUL:		    #4682B4

!! clipboard management
URxvt.clipboard.copycmd:   xclip -i -sel clip
URxvt.clipboard.pastecmd:  xclip -o -sel clip
URxvt.clipboard.autocopy:  true
URxvt*keysym.M-c:          perl:clipboard:copy
URxvt*keysym.M-v:          perl:clipboard:paste
URxvt*keysym.M-C-v:        perl:clipboard:paste_escaped

!! url-select
URxvt*keysym.M-l:	    perl:url-select:select_next
URxvt*url-select.autocopy:  true
URxvt*url-select.button:    2
URxvt*url-select.launcher:  firefox
URxvt*url-select.underline: true

!! keyboard-select:
URxvt.keyboard-select.clipboard:  true
URxvt*keysym.M-Escape:            perl:keyboard-select:activate
URxvt*keysym.M-s:                 perl:keyboard-select:search

!! resize-font
URxvt*keysym.C-minus:     resize-font:smaller
URxvt*keysym.C-plus:      resize-font:bigger
URxvt*keysym.C-equals:    resize-font:reset
URxvt*keysym.C-question:  resize-font:show

!! Matcher
URxvt*url-launcher:         firefox
URxvt*matcher.button:       1

!! rofi
!rofi.color-enabled:	true
!rofi.color-window:	#000,    #000,    #000
!rofi.color-normal:	#111,    #819396, #222,    #008ed4, #ffffff
!rofi.color-active:	#002b37, #008ed4, #003643, #008ed4, #66c6ff
!rofi.color-urgent:	#002b37, #da4281, #003643, #008ed4, #890661
!
!rofi.fake-transparency:	true
!rofi.padding:           50
!rofi.lines:		10
!rofi.bw:		0
!rofi.opacity:		"65"
!rofi.hide-scrollbar:	true
!rofi.width:		70


