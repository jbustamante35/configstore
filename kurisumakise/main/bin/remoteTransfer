#!/bin/sh
# Transfer files across servers
# Set $drc to giv for transferring from local filesystem to server
# Set $drc to rec for transferring from server to local filesystem
srv="$1"
drc="$2"

# Select server to transfer
case $srv in
    jdev)
        # JDev remote server
        #ip=128.104.98.13
        ip=jdev
        user=jbustamante
        port=22
        ;;

    submit)
        # Spalding lab submit machine
        #ip=128.104.98.118
        ip=submit
        user=jbustamante
        port=22
        ;;

    winry)
        # Winry Rockbell (ASUS)
        #ip=192.168.1.29
        ip=winry
        user=jbustamante
        port=3553
        ;;

    kurisu)
        # Kurisu Makise (Dell)
        #ip=192.168.1.23
        ip=kurisu
        user=jbustamante
        port=3355
        ;;

    potato)
        # Potato (Chromebook)
        #ip=192.168.1.13
        ip=potato
        user=jbustamante
        port=5335
        ;;

    office)
        # Potato (Chromebook)
        #ip=128.104.98.153
        ip=office
        user=kinematics
        port=133
        ;;

    molinejo)
        # Potato (Chromebook)
        #ip=128.104.98.182
        ip=molinejo
        user=jbustamante
        port=133
        ;;

    *)
        # Typo or name not found
        ip=
        user=
        port=
        ;;
esac

# Determine direction to transfer
case $drc in
    giv)
    from="$3"
    to="$user@$ip:${4}"
    ;;

    rec)
    from="$user@$ip:${3}"
    to="$4"
    ;;

    *)
    # Default to giving file
    from="$3"
    to="$user@$ip:${4}"
    ;;
esac



# Run command
#echo "sudo scp -r -P $port $from $to"
#sudo scp -r -P $port $from $to
#scp -r -P $port $from $to
scp -r $from $to

