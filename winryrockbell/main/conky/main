-- ${voffset 1} ${color} memory $alignr ${color} $mem - $memmax
-- ${voffset 1} ${color} swap   $alignr ${color} $swap - $swapmax

-- ${voffset 5} $alignr ${color}  ${execi 5 quoteSwitch 0 1}
