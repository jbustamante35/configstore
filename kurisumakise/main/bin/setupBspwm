#!/bin/sh

## Startup script for Bspwm

# Kill running daemons
killall dunst & killall conky & killall compton & killall polybar & mpd --kill ;

# Set displays
setScreens 3;

# Set Xresources and wallpaper
regencolors $WALEND 1

# Applets [bluetooth , wifi]

# Dropbox autostart
#dropbox-cli autostart
dropbox-cli start

# Touchpad tap
touchpadctl tap

# MPD | Compton | Conky | Dunst
mpd &
bash ~/.config/conky/conky.sh &
dunst   -config ~/.config/dunst/dunstrc &
compton --config ~/.config/compton/compton.conf -b  ;

# URxvt daemon
urxvtd -q -o -f

# Enable GPU
#systemctl restart disable-nvidia-on-shutdown.service

